package megatron;

public class FuzzyVariables {
	
	static double energy;
	static double energyEnemy;
	static double bearingFromGun;
	static double lastBearingFronGun;
	static double closeDistance;
	static double farDistance;
	static double lowEnergy;
	static double highEnergy;
	static double lowAggress;
	static double moderateAggress;
	static double highAggress;
	static double precision;
	
	public static void inicialize(){
		energyEnemy = 0;
		bearingFromGun = 0;
		lastBearingFronGun= 0;
		closeDistance = 0;
		double farDistance;
		double lowEnergy;
		double highEnergy;
		double lowAggress;
		double moderateAggress;
		double highAggress;
		double precision;
	}
}
